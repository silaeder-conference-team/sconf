generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int               @id @default(autoincrement())
  name             String
  email            String
  password_hash    String
  isOrganisator    Boolean
  isStudent        Boolean
  isTutor          Boolean
  tutoringProjects Project[]
  projects         ProjectsOnUsers[]
  isDeleted        Boolean           @default(false)
}

model Project {
  id              Int               @id @default(autoincrement())
  name            String
  description     String
  section         String
  timeForSpeech   Int
  schedulePos     Int
  active          Boolean
  tutorId         Int?
  tutor           User?             @relation(fields: [tutorId], references: [id], onDelete: SetNull)
  conferenceId    Int?
  grade           Int
  isHidden        Boolean           @default(false)
  isInShowerCase  Boolean           @default(false)
  Conference      Conference?       @relation(fields: [conferenceId], references: [id], onDelete: SetNull)
  users           ProjectsOnUsers[]
  additionalUsers String            @default("")
}

model ProjectsOnUsers {
  projectId Int
  userId    Int
  project   Project @relation(fields: [projectId], references: [id])
  user      User    @relation(fields: [userId], references: [id])

  @@id([projectId, userId])
}

model Conference {
  id      Int       @id @default(autoincrement())
  name    String
  start   DateTime
  break   Break[]
  project Project[]
}

model Break {
  id           Int         @id @default(autoincrement())
  time         Int
  schedulePos  Int
  conferenceId Int?
  Conference   Conference? @relation(fields: [conferenceId], references: [id])
}
